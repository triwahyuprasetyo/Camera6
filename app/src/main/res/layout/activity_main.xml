<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.triwahyuprasetyo.camera6.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_camera_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera Permission Test" />

        <Button
            android:id="@+id/button_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Storage Permission Test" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Permission Test" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
